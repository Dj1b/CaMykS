/**
 * Return Gome client device information from a known list.
 * @param mixed $deviceCode
 * @return array
 */
function get_GomeClientDevice($deviceCode='') {
    $deviceList = array(
        'C7_Note_Plus' => array('platform_model' => 'C7 Note Plus', 'platform_year' => '2019'),
    );

    /* Check for returning list */
    if ($deviceCode === false)
      return $deviceList;

    /* Initialise result. */
    $result = array(
        'platform_company'  => 'Gome',
        'platform_country'  => 'cn',
        'platform_model'    => $deviceCode,
        'platform_type'     => 'handheld',
        'platform_format'   => 'handheld',
    );

    /* Check if device is a known device. */
    if (!array_key_exists($deviceCode, $deviceList))
        return $result;

    /* Return result. */
    return array_merge($result, $deviceList[$deviceCode]);
}
