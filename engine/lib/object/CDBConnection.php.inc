    return true;
  }
  
  /* data related methods */
  
  /*
   * return escaped string
   * @param string $string
   * @return string
   * @access public
   */
  function escape_string($string) {
    return addslashes($string);
  }
  
  /* internal methods */
  
  /*
   * return automatic ressource name
   * @return string
   * @access private
   */
  function get_resName() {
    $c = count($this->queryRes)+1;
    while (isset($this->queryRes['res'.$c]))
      $c++;
    return 'res'.$c;
  }
